package com.oreilly.cloud;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;

@RestController
public class microserviceController {
	
	@Autowired
	private RestTemplate template;
	
	@RequestMapping(/title)
	public String findByTitle(@Param("title") String title) {
		URI uri = new URI("http://localhost:8080/lists/title?title=" + title);
		return template.getForObject(uri, String);
	}
	
	
	
	@RequestMapping("/cars")
	public String cars() {
		System.out.println("Controller /cars");
		URI uri = new URI("http://localhost:8080/lists/cars")
		template.
		
		return String.join(", ", cars.cars());
	}
	
	@RequestMapping("/dogs")
	public String dogs() {
		System.out.println("Controller /dogs");
		return String.join(" ,", dogList);
	}
	
	@RequestMapping("/cats")
	public String cats() {
		System.out.println("Controller /cats");
		return String.join(" ,", catList);
	}
}
